<body class="hold-transition sidebar-mini layout-fixed">
  <div class="wrapper">
    <!-- Navbar -->
    <nav class="main-header navbar navbar-expand navbar-white navbar-light">
      <!-- Left navbar links -->
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" data-widget="pushmenu" href="#"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
          <a href="./" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
          <a href="contact" class="nav-link">Contact</a>
        </li>
      </ul>

      <!-- SEARCH FORM -->
      <form class="form-inline ml-3">
        <div class="input-group input-group-sm">
          <input class="form-control form-control-navbar" type="search" placeholder="Search" aria-label="Search" />
          <div class="input-group-append">
            <button class="btn btn-navbar" type="submit">
              <i class="fas fa-search"></i>
            </button>
          </div>
        </div>
      </form>

      <!-- Right navbar links -->
      <ul class="navbar-nav ml-auto">
        <li class="nav-item dropdown">
          <a class="nav-link" data-toggle="dropdown" href="#">
            <span class="badge badge-pill badge-secondary p-2">
              Emulator&nbsp;
              <% if (emulator.enable) { %>
              <i class="fa fa-pause-circle"></i>
              <% } else { %>
              <i class="fa fa-play-circle"></i>
              <% } %>
            </span>
          </a>
          <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
            <div class="card-body">
              <div class="row">
                <div class="col">
                  <label for="TimeInterval">Time Interval:</label>
                  <input type="number" class="form-control" id="TimeInterval" value="<%= emulator.interval %>"
                    <% if (emulator.enable) { %>disabled<% } %>>
                </div>
              </div>
              <div class="row mt-1">
                <div class="d-flex flex-row align-items-center">
                  <div class="p-2">
                    <label for="emulator">
                      <% if (emulator.enable) { %>
                      Disable:
                      <% } else { %>
                      Enable:
                      <% } %>
                    </label>
                  </div>
                  <div class="p-2">
                    <a id="emulator_url" class="nav-link h4" href="emulator/<%= emulator.interval %>"
                      aria-expanded="false" title="Emulator">
                      <% if (emulator.enable) { %>
                      <i id="emulator" class="fa fa-toggle-on"></i>
                      <% } else { %>
                      <i id="emulator" class="fa fa-toggle-off"></i>
                      <% } %>
                    </a>
                  </div>

                </div>
              </div>
            </div>
          </div>
        </li>
      </ul>
    </nav>
    <!-- /.navbar -->

    <!-- Main Sidebar Container -->
    <aside class="main-sidebar sidebar-dark-primary elevation-4">
      <!-- Brand Logo -->
      <a href="./" class="brand-link">
        <img src="dist/img/Logo.png" alt="<%= title %> Logo" class="brand-image img-circle" style="opacity: 0.8;" />
        <span class="brand-text font-weight-light"><%= title %></span>
      </a>

      <!-- Sidebar -->
      <div class="sidebar">
        <!-- Sidebar user panel (optional) -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
          <div class="image">
            <img src="dist/img/Monitor.png" class="" alt="Monitor Logo" />
          </div>
          <div class="info">
            <a href="#" class="d-block">Active Monitoring</a>
          </div>
        </div>

        <!-- Sidebar Menu -->
        <nav class="mt-2">
          <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
