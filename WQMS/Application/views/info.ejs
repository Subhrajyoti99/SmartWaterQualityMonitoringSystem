            <li class="nav-item">
              <a href="./" class="nav-link">
                <i class="nav-icon fas fa-tachometer-alt"></i>
                <p>
                  Dashboard
                </p>
              </a>
            </li>
            <li class="nav-item">
              <a href="info" class="nav-link active">
                <i class="nav-icon fas fa-inbox"></i>
                <p>
                  Info
                </p>
              </a>
            </li>
            <li class="nav-item">
              <a href="contact" class="nav-link">
                <i class="nav-icon fas fa-address-card"></i>
                <p>
                  Contact
                </p>
              </a>
            </li>
          </ul>
        </nav>
        <!-- /.sidebar-menu -->
      </div>
      <!-- /.sidebar -->
    </aside>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <div class="content-header">
        <div class="container-fluid">
          <div class="row mb-2">
            <div class="col-sm-6">
              <h1 class="m-0 text-dark">Info</h1>
            </div>
            <!-- /.col -->
            <div class="col-sm-6">
              <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a href="info">Info</a></li>
                <li class="breadcrumb-item">Records</li>
              </ol>
            </div>
            <!-- /.col -->
          </div>
          <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
      </div>
      <!-- /.content-header -->

      <!-- Main content -->
      <section class="content">
        <div class="container-fluid">
          <div class="row">
            <div class="col">
              <div class="card">
                <div class="card-header">
                  <h3 class="card-title">Current Records</h3>
                  <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                      <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="maximize">
                      <i class="fas fa-expand"></i>
                    </button>
                  </div>
                </div>
                <div class="card-body">
                  <table id="example" class="table table-bordered table-striped">
                    <thead class="text-center">
                      <tr>
                        <th>Location</th>
                        <th>Moisture (in %)</th>
                        <th>Turbidity (in NTU)</th>
                        <th>pH</th>
                        <th>Quality Index (in %)</th>
                        <th>Info</th>
                      </tr>
                    </thead>
                    <tbody class="text-center">
                      <% for (loc in currentTable) { %>
                      <tr>
                        <td class="text-left"><%= loc %></td>
                        <td id="CT-M-<%= loc %>"><%= currentTable[loc].s1 %></td>
                        <td id="CT-T-<%= loc %>"><%= currentTable[loc].s2 %></td>
                        <td id="CT-P-<%= loc %>"><%= currentTable[loc].s3 %></td>
                        <td id="CT-Q-<%= loc %>"><%= currentTable[loc].qi %></td>
                        <td>
                          <a class="btn btn-outline-info" href="info/<%= loc %>" role="button">View</a>
                        </td>
                      </tr>
                      <% } %>
                    </tbody>
                    <tfoot class="text-center">
                      <tr>
                        <th>Location</th>
                        <th>Moisture (in %)</th>
                        <th>Turbidity (in NTU)</th>
                        <th>pH</th>
                        <th>Quality Index (in %)</th>
                        <th>Info</th>
                      </tr>
                    </tfoot>
                  </table>
                </div>
              </div>
            </div>
